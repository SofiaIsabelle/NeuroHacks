<%=render 'shared/errors', obj: @user%>

<div class = 'row'>
    <div class='col-xs-12'>
        

            
            <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |g| %>
                <div class="form-group">
                 <div class='control-label col-sm-2'>
                        <%= g.label :username %>
                 </div>       
                 <div class="col-sm-8">      
                        <%= g.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true%>
                 </div>        
            </div>
            
            
            <div class="form-group">
                 <div class='control-label col-sm-2'>
                     <%= g.label :email %> 
                 </div>
                 <div class="col-sm-8"> 
                     <%= g.email_field :email,  class: "form-control", placeholder: "Enter Email"%>
                 </div>     
            </div>
            
            <div class="form-group">
                 <div class='control-label col-sm-2'>
                     <%= g.label :password %> 
                 </div>
                 <div class="col-sm-8"> 
                     <%= g.password_field :password, class: "form-control", placeholder: "Enter Password"%>
                 </div>     
            </div>
            
            
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                   <%= g.submit(@user.new_record? ? "Signup" : "Update Acccount", class:'btn btn-primary btn-lg')%>
                </div>
            </div>   
            
            
            <%end%>

    <div class= "col-xs-4 col-xs-offset-4">      

          [<%= link_to "Cancel request & Return to Blogs Listing", articles_path %>]

    </div>

    </div>
</div>