<%=render 'shared/errors', obj: @article%>

<div class = 'row'>
    <div class='col-xs-12'>
        

            
            <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |g| %>
                <div class="form-group">
                 <div class='control-label col-sm-2'>
                        <%= g.label :title %>
                 </div>       
                 <div class="col-sm-8">      
                        <%= g.text_field :title, class: "form-control", placeholder: "Title", autofocus: true%>
                 </div>        
            </div>
            
            
            <div class="form-group">
                 <div class='control-label col-sm-2'>
                     <%= g.label :description %> 
                 </div>
                 <div class="col-sm-8"> 
                     <%= g.text_area :description, rows: 15,  class: "form-control", placeholder: "Article"%>
                 </div>     
            </div>
            
            
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                   <%= g.submit class:'btn btn-primary btn-lg'%>
                </div>
            </div>   
            
            
            <%end%>

    <div class= "col-xs-4 col-xs-offset-4">      

          [<%= link_to "Cancel request & Return to Blogs Listing", articles_path %>]

    </div>

    </div>
</div>